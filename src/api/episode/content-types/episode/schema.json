{
  "kind": "collectionType",
  "collectionName": "episodes",
  "info": {
    "singularName": "episode",
    "pluralName": "episodes",
    "displayName": "Episodes",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "EpisodeTitle": {
      "type": "string",
      "required": true
    },
    "EpisodeSlug": {
      "type": "uid",
      "targetField": "EpisodeTitle",
      "required": true
    },
    "BroadcastDateTime": {
      "type": "datetime",
      "required": true,
      "unique": true
    },
    "EpisodeImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "SoundcloudLink": {
      "type": "string",
      "required": true
    },
    "MixCloudLink": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "Tracklist": {
      "type": "component",
      "component": "tracks.track-list",
      "repeatable": true
    },
    "EpisodeDescription": {
      "type": "text",
      "required": true
    },
    "StaffPick": {
      "type": "boolean"
    },
    "StaffPickComments": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "StaffPick"
            },
            true
          ]
        }
      }
    },
    "link_episode_to_show": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::show.show",
      "inversedBy": "Show_Episodes"
    },
    "guest_artists": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::artist.artist",
      "mappedBy": "episodes_guest_featured"
    },
    "tag_genres": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "episodes"
    },
    "tag_mood_vibes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::mood-vibe-tag.mood-vibe-tag",
      "inversedBy": "episodes"
    },
    "tag_themes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag-theme.tag-theme",
      "mappedBy": "episodes"
    }
  }
}
